<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horario_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <LinearLayout
        android:id="@+id/llHorarioList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/lbHorarioTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16dp"
            android:text="Texto"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btHorarioCardEdit"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:drawableBottom="@drawable/ic_edit"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/btHorarioCardDelete"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:drawableBottom="@drawable/ic_delete"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/btHorarioCardList"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:drawableBottom="@drawable/ic_list"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>